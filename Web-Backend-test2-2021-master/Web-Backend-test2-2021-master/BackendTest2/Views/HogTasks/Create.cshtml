        $('.CKEditorObject').each(function (index, element) {
            ClassicEditor
                .create(element,
                    {
                        toolbar: {
                            items: [
                                'heading',
                                '|',
                                'bold',
                                'italic',
                                'underline',
                                'removeFormat',
                                'subscript',
                                'superscript',
                                '|',
                                'fontFamily',
                                'fontSize',
                                'fontColor',
                                '|',
                                'alignment',
                                'indent',
                                'outdent',
                                '|',
                                'horizontalLine',
                                'bulletedList',
                                'numberedList',
                                '|',
                                'link',
                                'code',
                                'codeBlock',
                                'insertTable',
                                'blockQuote',
                                'mediaEmbed',
                                '|',
                                'undo',
                                'redo'
                            ]
                        },
                        language: 'en',
                        image: {
                            toolbar: [
                                'imageTextAlternative',
                                'imageStyle:full',
                                'imageStyle:side'
                            ]
                        },
                        table: {
                            contentToolbar: [
                                'tableColumn',
                                'tableRow',
                                'mergeTableCells',
                                'tableCellProperties',
                                'tableProperties'
                            ]
                        },
                        licenseKey: ''
                    });
        });
    });
</script>

<script>
    var UpdateTestCount = function () {
            var testBankName = $("#testBankTaskSelect").val();
            var testCount = $("#" + testBankName).val();
            $(".testCountInput").val(testCount);
        };


        $("#testBankTaskSelect").change(function () {
            UpdateTestCount();
        });

        $(document).ready(function () {
            UpdateTestCount();
            $("#topicsSelect").select2({
                width: 'resolve',
                placeholder: 'Выберите темы',
                allowClear: true
            });
            $("#contestsSelect").select2({
                width: 'resolve',
                placeholder: 'Выберите темы',
                allowClear: true
            });
        });


</script>

