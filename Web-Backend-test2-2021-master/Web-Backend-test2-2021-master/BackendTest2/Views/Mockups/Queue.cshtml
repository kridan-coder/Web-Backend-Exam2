@{
}
@if (true) //Админ или преподователь
{
    <h1>Очередь постмодерации</h1>

    <form method="get">
        <div class="form-row">
            <div class="form-group col-12 col-lg-6">
                <select multiple="multiple" class="form-control" id="topicsSelect">
                    <option>Тема 1</option>
                    <option>Тема 2</option>
                    <option>Тема 3</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12 col-md-6 col-lg">
                <input class="form-control" placeholder="Задача" type="search" />
            </div>
            <div class="form-group col-12 col-md-6 col-lg">
                <select multiple="multiple" class="form-control" id="prLangsSelect">
                    <option>C#</option>
                    <option>C++</option>
                    <option>Java</option>
                </select>
            </div>
            <div class="form-group col-10 col-lg">
                <select multiple="multiple" class="form-control" id="userSelect">
                    <option>user 1</option>
                    <option>user 2</option>
                    <option>user 3</option>
                </select>
            </div>
            <div class="form-group col-2 col-lg-1">
                <button type="submit" class="btn btn-outline-secondary button-icon w-100" data-toggle="tooltip" data-title="Поиск">
                    <i class="fas fa-search fa-1x text-dark hand_cursor"></i>
                </button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-12">
            @if (!true)//Нет решений
            {
                <p class="font-italic text-muted text-center">Нет решений</p>
            }
            else
            {
                <table class="table table-responsive-sm table-bordered">
                    <thead>
                        <tr>
                            <th class="align-middle">
                                <span>№</span>
                            </th>
                            <th class="align-middle">
                                Автор
                            </th>
                            <th class="align-middle">
                                Задача
                            </th>
                            <th class="align-middle">
                                Язык программирования
                            </th>
                            <th class="align-middle">
                                Вердикт
                                <!--OK / Pending / Declined-->
                            </th>
                            <th class="align-middle">
                                Отправлено
                                <!--Дата-время отправки-->
                            </th>
                            <th class="align-middle">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row" class="align-middle">
                                <a class="text-dark">1</a> <!--ссылка на решение-->                                
                            </th>
                            <td class="align-middle">                                
                                <a class="text-dark">
                                    %Автор решения (user)%
                                </a>  
                            </td>
                            <td class="align-middle">                                
                                    <a class="text-dark" target="_blank">%Имя задачи%</a>
                            </td>
                            <td class="align-middle">
                                %Язык программирования%
                            </td>
                            
                            <td class="align-middle">                               
                                <span>%Вердикт учителя%</span> <!--Если вырдикт выставлен, то шаблон "%имя_учителя: %Вердикт%"-->                                    
                            </td>
                            <td class="align-middle">%дата-время отправки%</td>

                            <td class="align-middle pt-1 pb-1 text-center">
                               
                                @if (true) //Админ или преподаватель
                                {
                                    <a class="btn btn-sm btn-outline-secondary mb-1" target="_blank">Модерировать</a>
                                    <br />                                   
                                    <button type="button" class="btn btn-sm btn-outline-danger mb-1">Удалить</button><br />                                    
                                }
                            </td>
                        </tr>

                    </tbody>
                </table>
            }
        </div>
    </div>

}
else
{
    //нет прав
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#userSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите пользователей',
            allowClear: true
        });

        $("#prLangsSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите языки программирования',
            allowClear: true
        });

        $("#topicsSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите темы',
            allowClear: true
        });
        $("#contestsSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите контесты',
            allowClear: true
        });

        $("#groupsSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите группы',
            allowClear: true
        });

        $("#taskSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите задачи',
            allowClear: true,
            closeOnSelect: false
        });

        $("#classesSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите классы',
            allowClear: true
        });

        $("#rolesSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите роли',
            allowClear: true
        });


        $("#subdivisionsSelect").select2({
            width: 'resolve',
            placeholder: 'Выберите подразделения',
            allowClear: true
        });
    });
</script>