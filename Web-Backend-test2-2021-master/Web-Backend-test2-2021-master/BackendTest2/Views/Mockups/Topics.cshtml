@{
}

    <div class="row">
        <div class="col-12">
            <h1>Темы</h1>
            <a>Создать тему</a>
            @if (!true) //нет тем
            {
                <p class="font-italic text-muted text-center">Нет тем</p>
            }
            else
            {
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>
                                <span>Название</span>
                            </th>
                            <th>
                                Минимальные баллы
                            </th>
                            <th>
                                Родительская тема
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                %Тема 1%
                            </td>    
                            <td>                                
                                    <span>15</span>
                            </td>                           
                            <td>                               
                                <a class="text-dark">
                                    %Имя_родительской_темы%
                                </a> 
                                        
                            </td>
                            <td>                                
                                    <a>
                                        <i data-toggle="tooltip" data-title="Задачи темы" class="fas fa-laptop-code fa-lg mr-1 text-muted hand_cursor mr-1"></i>
                                    </a>
                                @if (true) //админ
                                {
                                    <a>
                                        <i data-toggle="tooltip" data-title="Редактировать" class="fas fa-pencil-alt fa-lg text-muted hand_cursor"></i>
                                    </a>   
                                    <a>
                                        <i data-toggle="tooltip" data-title="Удалить" class="fas fa-trash-alt fa-lg text-danger hand_cursor"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
